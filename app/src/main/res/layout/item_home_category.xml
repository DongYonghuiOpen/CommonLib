<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/wrap_all"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/general_item_padding"
    android:paddingRight="@dimen/general_item_padding">

    <TextView
        android:id="@+id/mItemTitleTextView"
        style="@style/wrap_all"
        android:padding="@dimen/general_item_padding"
        android:textColor="@color/text_111f"
        android:textSize="@dimen/general_textSize_16" />

    <ImageView
        android:id="@+id/mItemDivideView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/tag_category_item" />
</LinearLayout>