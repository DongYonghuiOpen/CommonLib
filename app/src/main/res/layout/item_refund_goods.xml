<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/general_item_padding">

    <TextView
        android:id="@+id/mGoodsNameTextView"
        style="@style/general_textStyle_blackMax2"
        android:layout_width="0dp"
        android:layout_weight="1" />

    <com.dyh.common.lib.weigit.number.SnappingStepper
        android:id="@+id/mSnappingStepper"
        android:layout_width="100dp"
        android:layout_height="36dp"
        app:stepper_contentBackground="@color/color_general_background_white"
        app:stepper_contentTextSize="22"
        app:stepper_leftButtonBackground="@drawable/stepper_button_background"
        app:stepper_rightButtonBackground="@drawable/stepper_button_background" />

</LinearLayout>