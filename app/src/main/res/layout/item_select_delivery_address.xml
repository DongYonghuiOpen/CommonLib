<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/general_item_margin_min"
    android:background="@color/color_general_background_white"
    app:cardCornerRadius="@dimen/common_radius"
    app:cardElevation="@dimen/general_item_padding_min">

    <LinearLayout
        android:id="@+id/mRootView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:padding="@dimen/general_item_padding">

        <CheckBox
            android:id="@+id/mCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/general_item_padding"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mNameTextView"
                style="@style/general_textStyle_blackMax1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mAddressTextView"
                style="@style/general_textStyle_blackDefaultSize"
                android:layout_marginTop="@dimen/general_item_padding_min" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>